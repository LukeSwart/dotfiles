# LOCK SCREEN HOTKEYS
# display function button:
"slock"
  m:0x10 + c:235
# pause:
"slock"
  m:0x10 + c:127

# AUDIO CONTROLS
# Increase volume
"audio i"
  m:0x10 + c:123
# Decrease volume
"audio d"
  m:0x10 + c:122
# Toggle mute
"audio m"
  m:0x10 + c:121
# Play/Pause
"audio p"
  m:0x10 + c:172
# bind to the 'tools' button
"audio p"
  m:0x10 + c:179
# Next
"audio f"
  m:0x10 + c:171
# bind to the 'search' button
"aduio f"
  m:0x10 + c:152
# Previous
"audio b"
  m:0x10 + c:173
# bind to the 'launch' button
"audio b"
  m:0x10 + c:128
# Stop
"audio s"
  m:0x10 + c:174
# bind to the 'explorer' button
"audio s"
  m:0x10 + c:225

# OTHER
"backlight add -200"
  m:0x10 + c:232

"backlight add 200"
  m:0x10 + c:233

"xbindkeys_show"
  control+shift + q

