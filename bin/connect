#!/bin/bash

USER=$1
case $USER in
  jalmogo)
    FILE=~/.ssh/jalmogo-github
    ;;
  gitlab)
    FILE=~/.ssh/gitlab
    ;;
  modulitos)
    FILE=~/.ssh/modulitos-github
    ;;
  help|--help|*)
    echo "enter one of the following keys:"
    echo "jalmogo | gitlab | modulitos"
    return 0
    ;;
esac

eval "$(ssh-agent -s)"
echo "adding file: $FILE"

ssh-add $FILE
