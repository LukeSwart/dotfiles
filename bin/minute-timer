#!/bin/bash
countdown() {
  date1=$((`date +%s` + $1));
  while [ "$date1" -ne `date +%s`  ]; do
    echo -ne "$(date -u --date @$(($date1 - `date +%s`)) +%H:%M:%S)\r";
    sleep 0.1
  done
  play ~/music/sounds/bell-ringing-04.wav
}
minutes=$1
echo "minutes: $minutes"
seconds=$((($minutes)*60))
echo "seconds: $seconds"
countdown $seconds
