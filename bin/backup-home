# sudo does not affect the backup file ownership!
# sudo rsync -SaAXvx --info=progress2 --delete -H /home/lucas /run/media/lucas/lucas-backup/

# sudo rsync -SaAXvx --info=progress2 --dry-run --exclude='/home/lucas/.docker/images' --exclude='/home/lucas/.cache' --delete -H /home/lucas /run/media/lucas/lucas-backup/
